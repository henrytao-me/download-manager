<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="me.henrytao.downloadmanager">

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

  <!-- Get permission for reliable local dispatching on non-Google Play devices. -->
  <uses-permission android:name="android.permission.WAKE_LOCK" />

  <application>
    <service
      android:enabled="true"
      android:exported="false"
      android:name=".internal.DownloadManagerService" />

    <service
      android:enabled="true"
      android:exported="false"
      android:name=".internal.DownloadService" />

    <provider
      android:authorities="@string/download_manager_authority"
      android:enabled="true"
      android:exported="false"
      android:name=".internal.DownloadProvider" />

    <receiver android:name=".internal.AutoStartBroadcastReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>
  </application>
</manifest>
